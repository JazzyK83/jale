{
  "manifest_version": 3,
  "name": "Content Assessments",
  "version": "1.0",
  "description": "SEO readability assessment tool for Blogger editor",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.blogger.com/*",
    "*://blogger.com/*"
  ],
  "content_scripts": [{
    "matches": [
      "*://*.blogger.com/*",
      "*://blogger.com/*"
    ],
    "js": [
      "content-marking.js",
      "content-readability.js",
      "content-assessments.js"
    ],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}