{
  "manifest_version": 3,
  "name": "SBT - SEO Blogger Analyzer",
  "version": "1.0",
  "description": "Analyze SEO for Blogger posts",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["*://draft.blogger.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://draft.blogger.com/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}